<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lí Nhân Viên</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .header h1 {
            font-size: 3rem;
            color:  #ff6200;
            font-weight: bold;
        }
    </style>

</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <div class="row mb-4 header">
            <h1 class="text-center font-weight-bold">Danh Sách Nhân Viên Bị Ẩn</h1>
        </div>
        
        <div class="text-end mb-3">
            <a href="/employee/list" class="btn btn-secondary">
                Xem danh sách nhân viên
            </a>
        </div>

        <!-- Bảng nhân viên -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã số</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Vị trí</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="employeeTable">
                    {{#each employees}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.position}}</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="restoreEmployee('{{this._id}}')">Khôi phục</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

<!-- Footer -->
    <footer class="mt-4 text-center py-3" style="background-color: #343a40; color: white;">
        <p>Thông tin liên hệ:</p>
        <p><i class="fa-solid fa-phone"></i> 0123456789</p>
        <p><i class="fa-solid fa-location-dot"></i> 370 đường 3/2, p.Xuân Khánh, q.Ninh Kiều, tp.Cần Thơ</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function restoreEmployee(employeeId) {
            fetch(`/employee/restore/${employeeId}`, {
                method: 'PUT',
            }).then(() => {
                window.location.reload();
            });
        }
    </script>

</body>
</html>
