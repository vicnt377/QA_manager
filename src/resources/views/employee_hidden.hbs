<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lí Nhân Viên</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .header h1 {
            font-size: 3rem;
            color:  #ff6200;
            font-weight: bold;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">QUẢN LÝ QUÁN ĂN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dish/list">Quản Lý Món Ăn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bill/list">Quản Lý Hóa Đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/income">Thống Kê</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container mt-5">
        <!-- Header -->
        <div class="row mb-4 header">
            <h1 class="text-center font-weight-bold">Danh Sách Nhân Viên Bị Ẩn</h1>
        </div>
        
        <div class="text-end mb-3">
            <a href="/employee/list" class="btn btn-secondary">
                Xem danh sách nhân viên
            </a>
        </div>

        <!-- Bảng nhân viên -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã số</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Vị trí</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="employeeTable">
                    {{#each employees}}
                    <tr>
                        <td>{{shortId this._id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.position}}</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="restoreEmployee('{{this._id}}')">Khôi phục</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function restoreEmployee(employeeId) {
            fetch(`/employee/restore/${employeeId}`, {
                method: 'PUT',
            }).then(() => {
                window.location.reload();
            });
        }
    </script>

</body>
</html>
