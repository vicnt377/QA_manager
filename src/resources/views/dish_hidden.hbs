<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lí Nhân Viên</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .header h1 {
            font-size: 3rem;
            color:  #ff6200;
            font-weight: bold;
        }
    </style>

</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <div class="row mb-4 header">
            <h1 class="text-center font-weight-bold">Danh Sách Món Ăn Tạm Hết</h1>
        </div>
        
        <div class="text-end mb-3">
            <a href="/dish/list" class="btn btn-secondary">
                Xem danh sách món ăn
            </a>
        </div>

        <!-- Bảng món ăn -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên món</th>
                        <th>Giá</th>
                        <th>Mô tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="dishTable">
                    {{#each dishes}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.image}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.description}}</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="restoreDish('{{this._id}}')">Khôi phục</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

<!-- Footer -->
    <footer class="mt-4 text-center py-3" style="background-color: #343a40; color: white;">
        <p>Thông tin liên hệ:</p>
        <p><i class="fa-solid fa-phone"></i> 0123456789</p>
        <p><i class="fa-solid fa-location-dot"></i> 370 đường 3/2, p.Xuân Khánh, q.Ninh Kiều, tp.Cần Thơ</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function restoreDish(dishId) {
            fetch(`/dish/restore/${dishId}`, {
                method: 'PUT',
            }).then(() => {
                window.location.reload();
            });
        }
    </script>

</body>
</html>
