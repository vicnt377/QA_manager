<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống Kê Thu Nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Thư viện biểu đồ -->
    <style>
        .header {
            margin-top: 3rem;
            color: #ff6200;
            font-weight: bold;
        }
        .table th, .table td {
            text-align: center;
        }
        .card {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">QUẢN LÝ QUÁN ĂN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dish/list">Quản Lý Món Ăn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bill/list">Quản Lý Hóa Đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/income">Thống Kê</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center header">Thống Kê Thu Nhập Hàng Ngày</h1>

        <!-- Biểu đồ Thu Nhập -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <canvas id="incomeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bảng Thống Kê -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thống Kê Thu Nhập Mỗi Ngày</h5>
                        <table class="table table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ngày</th>
                                    <th>Tổng Thu Nhập (VND)</th>
                                    <th>Số Hóa Đơn</th>
                                </tr>
                            </thead>
                            <tbody id="statsTableBody">
                                <!-- Dữ liệu sẽ được hiển thị tại đây -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Dữ liệu mẫu từ API (Thực tế bạn sẽ lấy từ API server)
        const dailyStats = [
            { _id: '2024-12-01', totalIncome: 500000, count: 5 },
            { _id: '2024-12-02', totalIncome: 600000, count: 6 },
            { _id: '2024-12-03', totalIncome: 550000, count: 4 },
            { _id: '2024-12-04', totalIncome: 700000, count: 7 }
        ];

        // Hiển thị bảng thống kê
        const statsTableBody = document.getElementById('statsTableBody');
        dailyStats.forEach(stat => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${stat._id}</td>
                <td>${stat.totalIncome.toLocaleString()} VND</td>
                <td>${stat.count}</td>
            `;
            statsTableBody.appendChild(row);
        });

        // Biểu đồ thu nhập hàng ngày
        const ctx = document.getElementById('incomeChart').getContext('2d');
        const incomeChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dailyStats.map(stat => stat._id),
                datasets: [{
                    label: 'Tổng Thu Nhập (VND)',
                    data: dailyStats.map(stat => stat.totalIncome),
                    borderColor: '#ff6200',
                    backgroundColor: 'rgba(255, 98, 0, 0.2)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                return tooltipItem.raw.toLocaleString() + ' VND';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Ngày'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Thu Nhập (VND)'
                        },
                        ticks: {
                            beginAtZero: true,
                            callback: function(value) {
                                return value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
